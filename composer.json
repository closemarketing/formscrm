{
	"name": "close/formscrm",
	"description": "",
	"homepage": "https://close.technology/",
	"license": "GPL-2.0-or-later",
	"config": {
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "^3",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7",
		"phpcompatibility/phpcompatibility-wp": "^2",
		"sirbrillig/phpcs-variable-analysis": "^2",
		"wp-coding-standards/wpcs": "^3",
		"phpcsstandards/phpcsutils": "^1.x-dev",
		"phpunit/phpunit": "^7",
		"yoast/phpunit-polyfills": "^1.0",
		"behat/behat": "^3.14",
		"dmore/behat-chrome-extension": "^1.4",
		"behat/mink-selenium2-driver": "^1.7",
		"wp-cli/wp-cli-tests": "^4.3",
		"behat/mink-browserkit-driver": "^2.2",
		"friends-of-behat/mink-extension": "^2.7"
	},
  "scripts": {
    "behat": "./vendor/bin/behat",
    "behat-rerun": "BEHAT_FEATURES_FOLDER=tests/behat/features rerun-behat-tests",
    "prepare-behat-tests": "install-package-tests",
    "format": "phpcbf --standard=phpcs.xml.dist",
    "lint": "phpcs --standard=phpcs.xml.dist",
    "phpmd": "phpmd . text phpmd.xml",
    "phpstan": "phpstan analyse --memory-limit=2048M",
    "test": "phpunit"
  },
	"autoload": {
    "psr-4": {
      "Close\\FormsCRM\\Forms_Utils\\": "includes/formscrm-library",
      "Close\\FormsCRM\\Admin\\": "includes/admin"
    },
		"classmap": [
			"./vendor/wp-coding-standards/wpcs/"
		]
	},
  "autoload-dev": {
    "psr-4": {
      "CLOSE\\FormsCRM\\Behat_Utils\\": "tests/behat/includes"
    }
  }
}
